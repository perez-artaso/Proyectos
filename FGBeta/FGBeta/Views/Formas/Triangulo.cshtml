@model FGBeta.Models.ConstructorTriangulos

@{
    ViewBag.Title = "Su Triangulo !";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        h1 {
            text-align: center;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            font-size: 60px;
        }

        h2 {
            text-align: center;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            font-size: 30px;
        }

        h3 {
            text-align: center;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
            font-size: 20px;
        }

        .claseP {
            font-family: Arial, Helvetica, sans-serif;
            color: white;
            font-size: 40px;
        }

        .background {
            background-image: url(../../fondo.jpg);
        }



        .center {
            text-align: center;
        }

        label {
            font-size: x-large;
            color: black;
            font-weight: bolder;
        }

        input {
            right: 100%;
            left: 0%;
            border-radius: 5px;
            font-weight: bolder;
            border: 0;
            width: 100%;
            color: brown;
            font-size: xx-large;
            height: 75px;
            font-family: Tahoma;
            position: relative;
            background: #f4f4f4;
            /* Old browsers */
            background: -moz-linear-gradient(top, #f4f4f4 1%, #ededed 100%);
            /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(1%, #f4f4f4), color-stop(100%, #ededed));
            /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #f4f4f4 1%, #ededed 100%);
            /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, #f4f4f4 1%, #ededed 100%);
            /* Opera 11.10+ */
            background: -ms-linear-gradient(top, #f4f4f4 1%, #ededed 100%);
            /* IE10+ */
            background: linear-gradient(to bottom, #f4f4f4 1%, #ededed 100%);
            /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#f4f4f4', endColorstr='#ededed', GradientType=0);
            /* IE6-9 */
        }
        table, tr, td {
            border: 1px solid black;
            text-align:center;
            font-weight:bolder;
        }
        .tdbackground
        {
            background-color:dodgerblue;
        }
        .trbackground
        {
            background-color: tomato;
        }
    </style>
</head>
<body class="background">
    <header>
        <h1>TRIANGULO</h1>
    </header>
    
        <div class="center">
            <table align="center" width="100%" height="100%">
                <tr>
                    <td class="trbackground">Tipo</td>
                    <td class="tdbackground">@Model.Tipo</td>
                </tr>
                <tr>
                    <td class="trbackground">Área</td>
                    <td class="tdbackground">@Model.Area cms2</td>
                </tr>
                <tr>
                    <td class="trbackground">Perimetro</td>
                    <td class="tdbackground">@Model.Perimetro cms</td>
                </tr>
                <tr>
                    <td class="trbackground">Lado A</td>
                    <td class="tdbackground">@Model.LadoA cms</td>
                </tr>
                <tr>
                    <td class="trbackground">Lado B</td>
                    <td class="tdbackground">@Model.LadoB cms</td>
                </tr>
                <tr>
                    <td class="trbackground">Lado C</td>
                    <td class="tdbackground">@Model.LadoC cms</td>
                </tr>
                <tr>
                    <td class="trbackground">Ángulo A-B</td>
                    <td class="tdbackground">@Model.AnguloAB°</td>
                </tr>
                <tr>
                    <td class="trbackground">Ángulo B-C</td>
                    <td class="tdbackground">@Model.AnguloBC°</td>
                </tr>
                <tr>
                    <td class="trbackground">Ángulo C-A</td>
                    <td class="tdbackground">@Model.AnguloCA°</td>
                </tr>
            </table>
        </div>
    

</body>
</html>




